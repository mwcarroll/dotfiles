{
    "version": 2,
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{.Folder}} :: {{.UserName}}@{{.HostName}}",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "transparent",
                    "foreground": "#44475A",
                    "leading_diamond": "<#44475A>\u256d\u2500</>",
                    "style": "diamond",
                    "template": "\u2500",
                    "type": "text"
                },
                {
                    "background": "#282A36",
                    "foreground": "#F8F8F2",
                    "style": "diamond",
                    "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
                    "type": "os"
                },
                {
                    "background": "#282A36",
                    "foreground": "#44475A",
                    "style": "plain",
                    "template": " \ue0b1",
                    "type": "os"
                },
                {
                    "background": "#282A36",
                    "foreground": "#8BE9FD",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "{{ if (matchP \"~\" .Path) }} \ueb06 {{ else }} \uf115 {{end}}{{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#282A36",
                    "foreground": "#44475A",
                    "style": "plain",
                    "template": "\ue0b1 ",
                    "type": "git"
                },
                {
                    "background": "#282A36",
                    "foreground": "#6272A4",
                    "properties": {
                        "fetch_upstream_icon": true
                    },
                    "style": "diamond",
                    "template": "on {{ .UpstreamIcon }}",
                    "type": "git"
                },
                {
                    "background": "#378504",
                    "foreground": "#44475A",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#50FA7B{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFB86C{{ end }}",
                        "{{ if gt .Ahead 0 }}#FF5555{{ end }}",
                        "{{ if gt .Behind 0 }}#FF5555{{ end }}"
                    ],
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "branch_icon": "󰘬",
                        "branch_identical_icon": "󱓏",
                        "branch_gone_icon": "\ueab8"
                    },
                    "style": "diamond",
                    "leading_diamond": "<#282A36>\ue0b0</>",
                    "template": "{{if .BranchStatus }} {{ .BranchStatus }}{{ end }} {{ .Ref }}",
                    "trailing_diamond": "\ue0b0",
                    "type": "git"
                },
                {
                    "background": "#282A36",
                    "foreground": "#6272A4",
                    "properties": {
                        "branch_icon": "\uf418 ",
                        "branch_identical_icon": "\uf444",
                        "branch_gone_icon": "\ueab8",
                        "fetch_stash_count": true,
                        "fetch_status": true                        
                    },
                    "style": "diamond",
                    "template": " {{ if .Working.Changed }}\uf044 {{ .Working.String }}</>{{ end }}{{ if .Staging.Changed }} <transparent>\ue0b1</> <#121318>\uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} <transparent>\ue0b1</> <#121318>\ueb4b {{ .StashCount }}{{ end }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "background": "#282A36",
                    "foreground": "#50FA7B",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#FF5555{{ end }}"
                    ],
                    "leading_diamond": "\ue0b2",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": " {{ if gt .Code 0 }}\u2718{{ else }}\uf42e{{ end }}",
                    "type": "status"
                },
                {
                    "background": "#282A36",
                    "foreground": "#8BE9FD",
                    "style": "diamond",
                    "template": " <#44475A>\ue0b3</> {{ .UserName }}@{{ .HostName }} ",
                    "type": "session"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#44475A",
                    "style": "plain",
                    "template": "\u2570\u2500",
                    "type": "text"
                },
                {
                    "foreground": "#44475A",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "\u276f ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }
    ]
}