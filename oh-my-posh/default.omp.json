{
    "version": 2,
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{.Folder}} :: {{.UserName}}@{{.HostName}}",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "transparent",
                    "foreground": "#707070",
                    "leading_diamond": "<#707070>\u256d\u2500</>",
                    "style": "diamond",
                    "template": "\u2500",
                    "type": "text"
                },
                {
                    "background": "#303030",
                    "foreground": "#FFFFFF",
                    "style": "diamond",
                    "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}}",
                    "type": "os"
                },
                {
                    "background": "#303030",
                    "foreground": "#707070",
                    "style": "plain",
                    "template": " \ue0b1",
                    "type": "os"
                },
                {
                    "background": "#303030",
                    "foreground": "#00AAFF",
                    "properties": {
                        "style": "full"
                    },
                    "style": "plain",
                    "template": "{{ if (matchP \"~\" .Path) }} \ueb06 {{ else }} \uf115 {{end}}{{ .Path }} ",
                    "type": "path"
                },
                {
                    "background": "#303030",
                    "foreground": "#707070",
                    "style": "diamond",
                    "template": "\ue0b1 on ",
                    "type": "git"
                },
                {
                    "background": "#303030",
                    "foreground": "#00AAFF",
                    "properties": {
                        "fetch_upstream_icon": true
                    },
                    "style": "diamond",
                    "template": "{{ .UpstreamIcon }}",
                    "type": "git"
                },
                {
                    "background": "#303030",
                    "foreground": "#5FAF00",
                    "properties": {
                        "branch_icon": "\uf418 ",
                        "branch_ahead_icon": "\uf14ca ",
                        "branch_behind_icon": "\uf14cb ",
                        "fetch_stash_count": true,
                        "fetch_status": true
                    },
                    "style": "diamond",
                    "template": "{{ .HEAD }}",
                    "type": "git"
                },
                {
                    "background": "#303030",
                    "foreground": "#00AAFF",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "style": "diamond",
                    "template": "{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "type": "git"
                },
                {
                    "background": "transparent",
                    "foreground": "#303030",
                    "style": "plain",
                    "template": "\ue0b0",
                    "type": "text"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "background": "#303030",
                    "foreground": "#5FAF00",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#d70000{{ end }}"
                    ],
                    "leading_diamond": "\ue0b2",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": " {{ if gt .Code 0 }}\u2718{{ else }}\uf42e{{ end }}",
                    "type": "status"
                },
                {
                    "background": "#303030",
                    "foreground": "#00AAFF",
                    "style": "diamond",
                    "template": " <#707070>\ue0b3</> {{ .UserName }}@{{ .HostName }} ",
                    "type": "session"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#707070",
                    "style": "plain",
                    "template": "\u2570\u2500",
                    "type": "text"
                },
                {
                    "foreground": "#707070",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "\u276f ",
                    "type": "status"
                }
            ],
            "type": "prompt"
        }
    ]
}